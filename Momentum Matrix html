  <title>Momentum Matrix — Mini</title>
  <style>
    :root{--bg:#0f172a;--card:#0b1220;--accent:#7dd3fc;color-scheme:dark}
    body{font-family:Inter,system-ui,Segoe UI,Roboto,Arial;margin:0;background:linear-gradient(180deg,#071029 0%,#071a2a 100%);color:#e6eef6;display:flex;align-items:center;justify-content:center;height:100vh}
    .card{background:linear-gradient(180deg,rgba(255,255,255,0.02),rgba(255,255,255,0.01));padding:20px;border-radius:12px;box-shadow:0 8px 30px rgba(2,6,23,0.6);width:720px;max-width:94%}
    h1{margin:0 0 12px;font-size:20px;letter-spacing:0.4px}
    .controls{display:flex;gap:16px;align-items:center}
    .col{flex:1}
    label{font-size:12px;opacity:.9}
    input[type=range]{width:100%}
    .readout{margin-top:12px;display:flex;gap:12px;align-items:center}
    .value{background:#021124;padding:10px;border-radius:8px;min-width:120px;text-align:center;font-weight:600}
    .arena{height:120px;background:linear-gradient(90deg,#02162a,#031022);border-radius:8px;margin-top:18px;position:relative;overflow:hidden}
    .ball{width:36px;height:36px;border-radius:50%;background:linear-gradient(135deg,var(--accent),#3b82f6);position:absolute;left:50%;top:50%;transform:translate(-50%,-50%);box-shadow:0 6px 18px rgba(0,0,0,0.6)}
    .btn{margin-left:8px;padding:8px 12px;border-radius:8px;border:0;background:linear-gradient(90deg,#06b6d4,#3b82f6);cursor:pointer;font-weight:600}
    footer{margin-top:12px;font-size:12px;opacity:.8}
    .formula{font-family:monospace;background:rgba(255,255,255,0.02);padding:6px 8px;border-radius:6px}
  </style>
